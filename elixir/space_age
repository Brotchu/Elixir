defmodule Age do

  def age(sec,"earth"), do: sec/31557600
  def age(sec,"mercury"), do: (sec/31557600)/0.2408467
  def age(sec,"venus"), do: (sec/31557600)/0.61519726
  def age(sec,"mars"), do: (sec/31557600)/1.8808158
  def age(sec,"jupiter"), do: (sec/31557600)/11.862615
  def age(sec,"saturn"), do: (sec/31557600)/29.447498
  def age(sec,"uranus"), do: (sec/31557600)/84.016846
  def age(sec,"neptune"), do: (sec/31557600)/164.79132
  def age(_), do: "invalid"
end
